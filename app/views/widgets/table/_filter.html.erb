<% in_group_of ||= 3 %>

<div class="table-filter">
  <%= search_form_for q, html: { class: 'form' } do |f| %>
    <h3><%= t('table.filter') %></h3>

    <% filters.in_groups_of(in_group_of, false).each do |inputs| %>
      <div class="inputs">
        <% inputs.each do |input| %>
          <div class="input">
            <%= f.label        "#{input}_cont" %>
            <%= f.search_field "#{input}_cont" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="inputs">
      <div class="input">
        <%= f.submit class: 'btn' %>
      </div>
    </div>
  <% end %>
</div>
